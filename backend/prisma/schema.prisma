generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model product {
  id               String    @id
  category_id      Int
  sub_category_id  Int?
  brand_id         Int
  product_name     String
  price            Decimal   @db.Decimal(10, 2)
  description      String?   @db.Text
  estimated_weight Decimal   @db.Decimal(10, 2)
  stock            Int
  is_deleted       Boolean   @default(false)
  createdTime      DateTime  @default(now())
  editedTime       DateTime?
  user_id          String    @default("admin-root-id")

  category           category             @relation(fields: [category_id], references: [id])
  sub_category       sub_category?        @relation(fields: [sub_category_id], references: [id])
  brand              brand                @relation(fields: [brand_id], references: [id])
  user               user                 @relation(fields: [user_id], references: [id]) // Relation to user
  cart               cart[]
  favorite           favorite[]
  media              media[]
  transaction_detail transaction_detail[]
  product_ram_type   product_ram_type[]
  product_socket     product_socket[]

  @@index([category_id])
  @@index([sub_category_id])
  @@index([brand_id])
  @@index([user_id])
}

model category {
  id            Int       @id @default(autoincrement())
  category_name String    @unique
  product       product[]
}

model sub_category {
  id                Int       @id @default(autoincrement())
  sub_category_name String    @unique
  product           product[]
}

model brand {
  id         Int       @id @default(autoincrement())
  brand_name String    @unique
  product    product[]
  sockets    socket[]
}

model socket {
  id             Int              @id @default(autoincrement())
  socket_name    String           @unique
  release_date   DateTime
  description    String?
  brand_id       Int
  brand          brand            @relation(fields: [brand_id], references: [id])
  product_socket product_socket[]

  @@index([brand_id])
}

model product_socket {
  id         Int     @id @default(autoincrement())
  product_id String
  socket_id  Int
  product    product @relation(fields: [product_id], references: [id])
  socket     socket  @relation(fields: [socket_id], references: [id])
}

model ram_type {
  id               Int                @id @default(autoincrement())
  ram_type_name    String             @unique
  product_ram_type product_ram_type[]
}

model product_ram_type {
  id          Int      @id @default(autoincrement())
  product_id  String
  ram_type_id Int
  product     product  @relation(fields: [product_id], references: [id])
  ram_type    ram_type @relation(fields: [ram_type_id], references: [id])
}

model simulation {
  id              String      @id @default(uuid())
  user_id         String
  simulation_data Json?
  title           String?
  description     String?
  modifiedAt      DateTime
  user            user     @relation(fields: [user_id], references: [id])

  @@index([user_id])
}

model user {
  id                     String               @id @default(uuid())
  role_name              String
  name                   String
  email                  String               @unique(map: "user_email_unique")
  password               String
  address                String
  phone_number           String
  profile_pic            String
  is_active              Boolean              @default(false)
  activation_token       String?
  reset_password_token   String?
  reset_password_expires DateTime?
  created_at             DateTime             @default(now())
  refresh_tokens         user_refresh_token[]
  simulation             simulation[]
  transaction            transaction[]
  cart                   cart[]
  favorite               favorite[]
  products               product[]

  role role @relation(fields: [role_name], references: [role_name])

  @@unique([email])
  @@map("user") // Optional: To make sure the table is named "user"
}

model user_refresh_token {
  id            String   @id @default(uuid())
  refresh_token String   @db.VarChar(1024)
  user_id       String
  created_at    DateTime @default(now())
  user          user     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("user_refresh_token")
}

model cart {
  id          Int      @id @default(autoincrement())
  product_id  String
  user_id     String
  quantity    Int      @default(1)
  date        DateTime
  product     product  @relation(fields: [product_id], references: [id])
  user        user     @relation(fields: [user_id], references: [id])
  is_selected Boolean  @default(true)

  @@index([product_id])
  @@index([user_id])
  @@map("cart")
}

model transaction_status {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?

  transaction transaction[]
}

model transaction {
  id            String    @id @default(uuid())
  user_id       String
  total_items   Int
  total_price   Decimal   @db.Decimal(10, 2)
  start_time    DateTime  @default(now())
  end_time      DateTime?
  payment_proof String?
  status_id     Int       @default(1)

  transaction_status transaction_status   @relation(fields: [status_id], references: [id])
  user               user                 @relation(fields: [user_id], references: [id])
  transaction_detail transaction_detail[]

  @@index([user_id])
}

model transaction_detail {
  id             Int         @id @default(autoincrement())
  product_id     String
  transaction_id String
  quantity       Int
  total_price    Decimal     @db.Decimal(10, 2)
  product        product     @relation(fields: [product_id], references: [id])
  transaction    transaction @relation(fields: [transaction_id], references: [id])

  @@index([product_id, transaction_id])
}

model favorite {
  id         Int     @id @default(autoincrement())
  product_id String
  user_id    String
  product    product @relation(fields: [product_id], references: [id])
  user       user    @relation(fields: [user_id], references: [id])
}

model media {
  id         Int     @id @default(autoincrement())
  product_id String
  source     String
  file_type  String
  product    product @relation(fields: [product_id], references: [id])
}

model role {
  role_name   String @id
  description String
  user        user[]
}
